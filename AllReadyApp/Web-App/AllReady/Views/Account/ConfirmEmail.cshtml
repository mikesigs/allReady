
@using System.Security.Claims;
@{
    ViewData["Title"] = "Confirm Email";
}

<h2>@ViewData["Title"].</h2>
<div>
    <p>
        Thank you for confirming your email.
        @if (!User.IsSignedIn())
        {
            <span>Please <a asp-controller="Account" asp-action="Login">Click here to Log in</a>.</span>
         } 
    </p>
</div>
